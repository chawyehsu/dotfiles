#!/bin/bash

# Colors
      GREEN="\[\033[0;32m\]"
     YELLOW="\[\033[0;33m\]"
       CYAN="\[\033[0;36m\]"
       BLUE="\[\033[0;34m\]"
     PURPLE="\[\033[0;35m\]"
 COLOR_NONE="\[\e[0m\]"

# Mintty terminal title prompt
MINTTY_TITLE="\[\e]0;Git Bash: \w\a\]"

# Determine active Python virtualenv details.
function set_virtualenv () {
  if test -z "$VIRTUAL_ENV" ; then
      VIRTUALENV=""
  else
      VIRTUALENV=" ${BLUE}[`basename \"$VIRTUAL_ENV\"`]${COLOR_NONE}"
  fi
}

function set_bash_prompt () {
  set_virtualenv

  PS1="${MINTTY_TITLE}${GREEN}\h: ${YELLOW}\W${CYAN}$(__git_ps1)${COLOR_NONE}${VIRTUALENV}\n\$"
}

PROMPT_COMMAND=set_bash_prompt
