include "~/.config/nano/syntax/*.nanorc"
set autoindent
set brackets ""')>]}"
set constantshow
set linenumbers
set matchbrackets "(<[{)>]}"
set minibar
set multibuffer
set nohelp
set numbercolor gray,normal
set stateflags
set statuscolor normal,normal
set tabsize 2 # 2 is used here and 4size can be inserted by indenting twice
set tabstospaces
set titlecolor gray,normal
set wordchars "<_>."
set zap # erase the marked region instead of a single character

# common
bind ^G help all
bind ^Q exit all
bind ^Z undo main
bind ^Y redo main

# buffer
bind ^O insert main # Open file to current/new buffer
bind ^S savefile main
bind ^B browser all # Browser files, work after ^O
bind M-, prevbuf main # This doesn't work..
bind ^] nextbuf main # And also M-. doesn't work..

# text edit
bind ^X cut main
bind ^C copy main
bind ^D paste main # (TODO:) ^V doesn't work: https://github.com/okibcn/nano-for-windows/issues/21
bind ^R replace main
bind ^M mark main
bind Sh-M-H chopwordleft main
bind Sh-M-L chopwordright main

# text search
bind ^F whereis all
bind ^P findprevious all
bind ^N findnext all

# indent and comment
bind M-I autoindent all
bind M-] indent all
bind M-[ unindent all
bind ^/ comment main

# cursor movement and mouse
bind M-H left all
bind M-J down all
bind M-K up all
bind M-L right all
bind M-B prevword all # Backward
bind M-F nextword all # Forward
bind ^H firstline all
bind ^J nextblock all
bind ^K prevblock all
bind ^L lastline all
bind Sh-M-M mouse all
