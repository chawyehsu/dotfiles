# https://www.nano-editor.org/dist/latest/nanorc.5.html
include "~/.config/nano/syntax/*.nanorc"
set autoindent
set brackets ""')>]}"
set constantshow
set linenumbers
set matchbrackets "(<[{)>]}"
set minibar
set multibuffer
set nohelp
set numbercolor gray,normal
set stateflags
set statuscolor normal,normal
## 2 is used here and 4size can be inserted by indenting twice
set tabsize 2
set tabstospaces
set titlecolor gray,normal
set wordchars "<_>."
## erase the marked region instead of a single character
set zap

# common
bind ^G help all
bind ^Q exit all
bind ^Z undo main
bind ^Y redo main
bind ^U cancel all

# buffer
bind ^S savefile main
## Open file to new buffer
bind ^O insert main
## Browser files, work after ^O
bind ^B browser all
bind ^] nextbuf main

# text edit
bind ^X cut main
bind ^C copy main
## (TODO:) ^V doesn't work:
## https://github.com/okibcn/nano-for-windows/issues/21
bind ^D paste main
bind ^R replace main
## Binding mark with ^M is not good, since it aliases to `Enter`,
## hence M-M is used here.. See nanorc manpage for details.
bind M-M mark main
bind Sh-M-H chopwordleft main
bind Sh-M-L chopwordright main

# text search
bind ^F whereis all
bind ^P findprevious main
bind ^N findnext main

# indent and comment
bind M-P whitespacedisplay main
bind M-I autoindent all
bind M-] indent all
bind M-[ unindent all
bind ^/ comment main

# cursor movement and mouse
bind M-H left all
bind M-J down all
bind M-K up all
bind M-L right all
bind M-B prevword all # Backward
bind M-N nextword all # Forward
bind ^H firstline all
bind ^J nextblock all
bind ^K prevblock all
bind ^L lastline all
bind Sh-M-M mouse all
