[alias]
	aliases = config --get-regexp alias
	remotes = remote -v
	unstage = reset HEAD
	last = log -1 HEAD
	brs = branch -a
	cim = commit -s -m
	clb = clone -b
	clr = clone --recursive
	cob = checkout -b
	tags = tag -l
	lg = log -n 10 --graph --pretty=format:'%C(yellow)%h%Creset %Cgreen(%cr) %C(bold blue)%an%Creset:%Cred%d%Creset %s' --abbrev-commit --date=relative
	st = status
	br = branch
	ci = commit -s
	co = checkout
	df = diff

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[pull]
	rebase = true

[branch]
	autosetuprebase = always

[core]
	trustctime = false
	quotepath = false
	safecrlf = false
	editor = nano
	autocrlf = input
	untrackedCache = true
	symlinks = true

[init]
	defaultBranch = main

[i18n]
	logoutputencoding = utf-8

[i18n "commit"]
	encoding = utf-8

[gui]
	encoding = utf-8

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# GitHub URL shorthands
[url "https://github.com/"]
	insteadOf = git://github.com/
	insteadOf = git@github.com:
	insteadOf = github:
	insteadOf = gh:

[url "https://gist.github.com/"]
	insteadOf = git://gist.github.com/
	insteadOf = git@gist.github.com:
	insteadOf = gist:

